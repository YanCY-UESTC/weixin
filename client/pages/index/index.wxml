<view class='setback'>
  <view class='page_row'>  
    <view class="search">  
      <view class='df search_arr'> 
        <icon class="searchcion" size='20' type='search'></icon>  
        <input class="" placeholder="     请输入书籍名/关键字" value="{{searchValue}}" bindinput="searchValueInput" />
      </view>  
    </view>  
    <view class='sousuo' bindtap='search'>搜索</view>  
  </view> 
  <view class='bc_text'>
    <view class='border'>可外借书籍</view>
  </view>
</view>
<view class='list'>
  <button bindtap='book_info'>
    <view>
      <image class='image' src='{{book_image}}'></image>
    </view>
    <view class='info_text'>
      <view>{{book_name}}</view>
      <view>作者：{{book_auth}}</view>
    </view>
  </button>
</view>