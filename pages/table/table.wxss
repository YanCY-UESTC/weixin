.top{
  width: 100%;
  height:248rpx;
  display: block;
}

.image_top{
  width: 100%;
  height: 248rpx;
}

.form{
  width: 95%;
  margin-top: 15px;
  border: dashed 3px rgba(242,175,31, 0.6);
  border-radius:15px;
  margin: 0 auto;
}

.notice{
  margin-top: 5px;
  margin-left: 5px;
  font-size: 16px;
  color: red;
  display: block;
  word-break:break-all;
  white-space: pre-line;
}

.itemView{
  margin-top: 10px;
  margin-left: 20px;
  font-size: 16px;
  display: block;
  word-break:break-all;
  white-space: pre-line;
}

.input{  
  height: 30px;  
  width: 90%; 
  border: solid 1px rgb(204, 204, 204); 
  border-radius:15px; 
  font-size: 16px;
  display: flex;  
  flex-direction: column;  
  justify-content: center;  
  margin: 0 auto; 
  margin-top: 10px;
} 

.note{  
  height: 130px;  
  width: 90%;  
  font-size: 16px;
  border: solid 1px rgb(204, 204, 204);  
  border-radius:15px;
  display: flex;  
  flex-direction: column; 
  margin: 0 auto; 
  margin-top: 10px;
}  

.add{
  height: 100px;
  width: 100px;
  margin-top:10px;
  margin-left: 50rpx;
  border: dashed 5px rgba(46,134,193, 0.3);  
  border-radius:15px;
  
}

.image_add{
  height:100px;
  width: 100px;
  opacity:0.3;
}

button.clr{
  width: 90%;
  align-self: center;
  font-size: 16px;
  margin-top: 30rpx;
  margin-bottom: 80rpx;
}

button.sub{
  width: 90%;
  font-size: 16px;
  align-self: center;
  margin-top: 60rpx;
}