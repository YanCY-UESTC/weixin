<!--table.wxml-->
<form>
<view class="horizon_line"></view> 
  <view class="itemView">书名：
    <input class="input" name="bookName" placeholder="请输入书名" bindinput="bookNameInput"/>
  </view>
  <view class="itemView">图书ISBN：
    <input class="input" name="bookIBSN" placeholder="请输入图书ISBN" bindinput="bookIBSNInput" />
  </view>
  <view class="itemView">备注：
    <textarea placeholder="placeholder颜色是红色的"  class="note" placeholder="请输入备注内容（如理想租金、借阅要求、交接地点等)" placeholder-style="text-align: center;"  bindinput="note"  />
  </view>

<view class="add">
    <image class='image_add' src='/images/add.png'></image>
</view>

  <button type='primary' formType='submit' class='sub' >提交</button>
  <button type='warn' formType='reset' class='clr'>清除</button>
  </form>
